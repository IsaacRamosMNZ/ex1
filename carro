package carro;

public class Carro {
    
    //Atributos
    String marca, cor;
    boolean ligado;
    double carga;
    int lugares;
    
    
    //Métodos
    void tampar() {
      if (this.ligado== true) {
          System.out.println(true + "Sim");
        System.out.println(false + "Não");
      }
       
    }
    void destampar() {
       if (this.ligado == false){
           System.out.println(true + "Não");
        System.out.println(false + "Sim");
       }
    }
 void acelerar(){
        if (this.ligado == true)   {
         System.out.println("Estou Acelerando!!" );
    
               }  else{ System.out.println("Ligue O Carro Animal!"); 
    }
    
    }
    

    void status(){
        System.out.println("Marca: " + marca );
        System.out.println("Cor: " + cor );
        System.out.println("Lugares: " + lugares );
        System.out.println("Carga: " + carga );
         if (this.ligado == true) {
        System.out.println("Este carro esta ligado? Sim");
        
    }
        if (this.ligado == false) {
        System.out.println("Este carro esta ligado? Não");
        
    }
    }
}